services:
  server:
    build:
      context: ./server
      dockerfile: dockerfile.server
    container_name: server
    env_file:
      - ./configs/.env.db.production
    networks:
      - refact41-denannu

  nginx:
    build:
      context: ./client
      dockerfile: dockerfile.nginx
    ports:
      - "80:80"
      - "443:443"
    container_name: nginx
    volumes:
      - /etc/letsencrypt:/etc/letsencrypt
    networks:
      - refact41-denannu

  redis:
    image: redis:7.4.1
    container_name: redis
    networks:
      - refact41-denannu

networks:
  refact41-denannu:
    driver: bridge
